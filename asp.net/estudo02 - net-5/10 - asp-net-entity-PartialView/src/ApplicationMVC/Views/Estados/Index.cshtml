@model IEnumerable<ApplicationBusiness.ParametrosModels.Estado>

@{
    ViewData["Title"] = "Index";
    ApplicationBusiness.ParametrosModels.Estado firstDados = Model.ToList().FirstOrDefault();
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-area="" asp-controller="Estados" asp-action="OrderBy" asp-route-OrdenaParm=@ViewBag.IDOrdenaParm>
                    <label asp-for="@firstDados.ID"></label>
                </a>

            </th>
            <th>
                <a asp-area="" asp-controller="Estados" asp-action="OrderBy" asp-route-OrdenaParm=@ViewBag.NomeOrdenaParm>
                    <label asp-for="@firstDados.Nome"></label>
                </a>

            </th>
            <th>
                <a asp-area="" asp-controller="Estados" asp-action="OrderBy" asp-route-OrdenaParm=@ViewBag.NomeOrdenaParm>
                    <label asp-for="@firstDados.Sigla"></label>
                </a>
                
            </th>
            <th>
                <a asp-area="" asp-controller="Estados" asp-action="OrderBy" asp-route-OrdenaParm=@ViewBag.PaisOrdenaParm>
                    <label asp-for="@firstDados.Pais.Nome"></label>
                </a>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
