
@model ApplicationBusiness.ParametrosModels.Usuario

@{
    ViewBag.Titulo = "LoginPage";
    Layout = null;
}



<style>
    span {
        color: red;
        float: left;
        margin-top: 1%;
        margin-left: 1%;
    }
</style>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Titulo - Sistema Web</title>
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <center>
            <br>
            <br>

            @if (ViewBag.Erro != null)
            {
                <h3 style="padding: 20px; color: white; background-color: dimgray">
                    @ViewBag.Erro
                </h3>
            }
            
            <h1 class="display-4">LOGIN</h1>
            
            <br>
            <br>

            <form asp-area="" 
                  asp-controller="Usuarios" 
                  asp-action="LoginPage"
                  asp-anti-forgery="false" 
                  method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset style="width: 40%;">
                    <br />
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Digite seu e-mail..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <br />
                    <br />
                    <br />
                    <input asp-for="Senha" class="form-control form-control-lg" placeholder="Digite sua senha..." />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                    <br />
                    <br />
                    <br />
                    <button type="submit" class="btn btn-primary mb-2" >
                        Entrar
                    </button>
                    <br />
                    <br />
                    <br />

                </fieldset>
            </form>
        </center>
    </header>
</body>
