@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="text-center">
    <input class="CaixaBusca" id="texto" name="texto" type="text" placeholder="Ano, Título ou Autor" />
    <button class="btn btn-success create" onclick="CarregarLista()">Buscar <i class="glyphicon glyphicon-search"></i></button>


    <div id="load" style="text-align:center">
        <h5><i class="fas fa-spinner fa-pulse"></i> Buscando...</h5>
    </div>
</div>

<div id="lista">
 
</div>

<script>
    $(document).ready(function () {
        $("#load").hide();
        $("#lista").hide();
    });

    function CarregarLista() {

        $("#load").show();
        $("#lista").hide();

        var texto = $('#texto').val();
        texto = encodeURI(texto);

        var url = "/testes/listagem?texto=" + texto ;

        $("#lista").load(url, function () {
            $("#load").hide();
            $("#lista").show();

        });
    }
</script>