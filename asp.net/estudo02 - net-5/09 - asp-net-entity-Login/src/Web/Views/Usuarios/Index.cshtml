@model IEnumerable<ApplicationBusiness.ParametrosModels.Usuario>

@{
    ViewData["Title"] = "Index";
    ApplicationBusiness.ParametrosModels.Usuario firstDados = Model.ToList().FirstOrDefault();
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-area="" asp-controller="Usuarios" asp-action="Index" asp-route-OrdenaParm=@ViewBag.IDOrdenaParm>
                    <label asp-for="@firstDados.ID"></label>
                </a>
                
            </th>
            <th>
                <a asp-area="" asp-controller="Usuarios" asp-action="Index" asp-route-OrdenaParm=@ViewBag.EMailOrdenaParm>
                    <label asp-for="@firstDados.Email"></label>
                </a>
                
            </th>
            <th>                
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                <a asp-area="" asp-controller="Usuarios" asp-action="Index" asp-route-OrdenaParm=@ViewBag.NomeOrdenaParm>
                    <label asp-for="@firstDados.Nome"></label>
                </a>
                
            </th>
            <th>
                <a asp-area="" asp-controller="Usuarios" asp-action="Index" asp-route-OrdenaParm=@ViewBag.TipoOrdenaParm>
                    <label asp-for="@firstDados.Tipo"></label>
                </a>
                
            </th>
            <th>                
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>                
                @Html.DisplayNameFor(model => model.ExpiraDias)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiraDias)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
